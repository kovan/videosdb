{
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 3000
    },
    "ui": {
      "enabled": true,
      "port": 13333
    },
    "firestore": {
      "port": 6001
    }
  }
}
