# copy this file to ~/.config/systemd/user/ipfs.service
# an then run loginctl enable-linger [user]

[Unit]

Description=IPFS daemon
After=network-online.target
AssertPathIsDirectory=/mnt/ipfs-repo

[Service]
Environment="IPFS_PATH=/mnt/ipfs-repo"
ExecStart=nice -n 10 /usr/local/bin/ipfs daemon
Restart=always

[Install]
WantedBy=default.target
