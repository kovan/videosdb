server {

  server_name ipfs.enlightenment.yoga;

  location / {
      proxy_pass http://localhost:8080;
  }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/ipfs.enlightenment.yoga/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/ipfs.enlightenment.yoga/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = ipfs.enlightenment.yoga) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


  listen 80;

  server_name ipfs.enlightenment.yoga;
    return 404; # managed by Certbot


}