server {
 root /var/www/html/wordpress;
 index index.php;
 server_name www.enlightenment.yoga 192.168.0.2;
 access_log /var/log/nginx/wordpress.access_log;
 error_log /var/log/nginx/wordpress.error_log
 notice;
 location / {
  try_files $uri $uri/ /index.php?$args;
 }
 location ~ \.php$
 {
  include snippets/fastcgi-php.conf;
  fastcgi_pass unix:/var/run/php/php7.0-fpm.sock;
 }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/www.enlightenment.yoga/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/www.enlightenment.yoga/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = www.enlightenment.yoga) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


 listen 80;
 server_name www.enlightenment.yoga 192.168.0.2;
    return 404; # managed by Certbot


}

server {
    listen 80;
    server_name enlightenment.yoga;

    return 301 https://www.enlightenment.yoga;
}


server {
    listen 443;
    server_name enlightenment.yoga;

    return 301 https://www.enlightenment.yoga;
}
